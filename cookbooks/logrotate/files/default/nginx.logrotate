/var/log/engineyard/nginx/*.log /var/log/engineyard/nginx/error_log {
    daily
    rotate 7
    dateext
    compress
    missingok
    notifempty
    sharedscripts
    extension gz
    
      postrotate
          [ ! -f /var/run/nginx.pid ] || kill -USR1 `cat /var/run/nginx.pid`

      endscript
}
