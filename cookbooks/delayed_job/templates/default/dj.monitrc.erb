check process delayed_job
  with pidfile /data/<%= @app_name %>/shared/pids/delayed_job.pid
  start program = "/data/<%= @app_name %>/current/script/delayed_job start -n <%= @worker_count %> --pid-dir=/data/<%= @app_name %>/shared/pids/ -e <%= @framework_env %>"
    as uid <%= @user %> and gid <%= @user %>
    with timeout 60 seconds
  stop program = "/data/<%= @app_name %>/current/script/delayed_job stop -n <%= @worker_count %> --pid-dir=/data/<%= @app_name %>/shared/pids/ -e <%= @framework_env %>"
    as uid <%= @user %> and gid <%= @user %>
    with timeout 60 seconds
  group <%= @app_name %>_jobs
  