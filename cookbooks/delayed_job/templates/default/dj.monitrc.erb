check process delayed_job
  with pidfile /data/<%= @app_name %>/shared/pids/delayed_job.pid
  start program = "/bin/su -c 'RAILS_ENV=<%= @framework_env %> /data/<%= @app_name %>/current/script/delayed_job start -n <%= @worker_count %> --pid-dir=/data/<%= @app_name %>/shared/pids/' - <%= @user %>" with timeout 120 seconds
  stop program = "/bin/su -c 'RAILS_ENV=<%= @framework_env %> /data/<%= @app_name %>/current/script/delayed_job stop -n <%= @worker_count %> --pid-dir=/data/<%= @app_name %>/shared/pids/' - <%= @user %>" with timeout 120 seconds
  group <%= @app_name %>_jobs
  