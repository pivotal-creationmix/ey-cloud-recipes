check process delayed_job
  with pidfile /data/<%= @app_name %>/shared/pids/delayed_job.pid
  start program = "cd /data/<%= @app_name %>/current && /usr/bin/env HOME=/home/<%= @user %> RAILS_ENV=<%= @framework_env %> /data/<%= @app_name %>/current/script/delayed_job start -n <%= @worker_count %> --pid-dir=/data/<%= @app_name %>/shared/pids/"
    as uid <%= @user %> and gid <%= @user %>
    with timeout 60 seconds
  stop program = "cd /data/<%= @app_name %>/current && /usr/bin/env HOME=/home/<%= @user %> RAILS_ENV=<%= @framework_env %> /data/<%= @app_name %>/current/script/delayed_job stop -n <%= @worker_count %> --pid-dir=/data/<%= @app_name %>/shared/pids/"
    as uid <%= @user %> and gid <%= @user %>
    with timeout 60 seconds
  group <%= @app_name %>_jobs
  